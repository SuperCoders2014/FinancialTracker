<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003300"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NewTransaction" >

    <EditText
        android:id="@+id/newTransaction_transactionType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/newTransaction_transactionName"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:text="@string/transType"
        android:textColor="#66FF00" />

    <Button
        android:id="@+id/newTransaction_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTransaction_transactionAmount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/createTrans" />

    <EditText
        android:id="@+id/newTransaction_transactionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:text="@string/transName"
        android:textColor="#66FF00" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/newTransaction_transactionAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newTransaction_transactionType"
        android:layout_below="@+id/newTransaction_transactionType"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:text="@string/transAmount"
        android:textColor="#66FF00" />

</RelativeLayout>
